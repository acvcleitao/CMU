<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/librarytitle"
        android:textSize="20sp"
        android:textColor="@color/black"
        tools:text="Library title"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/librarylocation"
        android:layout_below="@id/librarytitle"
        android:textColor="#393939"
        tools:text="My long long long location"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/footer"
        android:layout_below="@id/librarylocation"
        android:textSize="12sp"
        android:gravity="end"
        android:textColor="#858484"
        tools:text="Library"/>

</RelativeLayout>